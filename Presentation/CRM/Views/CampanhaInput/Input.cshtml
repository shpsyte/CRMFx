                                                                        <span class="input-group-addon"><i class="fa fa-user fa-lg fa-fw"></i></span>
                                                                        @Html.DropDownList("cod_pessoa", null, String.Empty, new { @class = "form-control input-lg" }) <i></i>
                                                                        @Html.ValidationMessageFor(a => a.cod_pessoa)
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>


