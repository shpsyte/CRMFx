                                                                        </label>

                                                                        @Html.ValidationMessageFor(model => model.ind_renova)

                                                                    </div>
                                                                </div>

                                                            </div>
                                                            <div class="col-sm-6 pull-left hide1 hide2">
                                                                <div class="form-group smart-form">
                                                                    <div class="input-group">
