@model CampanhaOrcamentoRegionalModel

@Html.AntiForgeryToken()
@Html.HiddenFor(model => model.campanhaorcamentoid)
@Html.HiddenFor(model => model.CampanhaOrcamentoRegional.campanhaorcamentoid)
@Html.HiddenFor(model => model.CampanhaOrcamentoRegional.campanhaorcamentoregionalid)


<fieldset>
    <legend> <i class="fa fa-arrow-right"></i> Valro disponível : @( ViewBag.ValorRestante != null ? Convert.ToString(ViewBag.ValorRestante) : "0" ) </legend>
    <div class="row">
        <section class="col col-9">
            <label class="label">Unidade</label>
            <label class="select">
                @Html.DropDownListFor(p => p.CampanhaOrcamentoRegional.cod_regional, ViewBag.cod_regional as IEnumerable<SelectListItem>, String.Empty, new { @class = "form-control input" })<i></i>
                @Html.ValidationMessageFor(model => model.CampanhaOrcamentoRegional.cod_regional)
            </label>
        </section>
    </div>
    <div class="row">
        <section class="col col-6">
            <label class="label">Valor</label>
            <label class="input">
                <i class="icon-prepend fa fa-money"></i>
                @Html.TextBoxFor(m => m.CampanhaOrcamentoRegional.vlr_orcamento, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CampanhaOrcamentoRegional.vlr_orcamento)
            </label>
        </section>
    </div>


</fieldset>
