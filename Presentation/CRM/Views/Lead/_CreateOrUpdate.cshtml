            <label class="label">Situacao</label>
            <label class="select">
                @Html.DropDownList("cod_situacao")  <i></i>
            </label>
        </section>
    </div>
    <div class="row">
        <section class="col col-6">
            <label class="label">Empresa</label>
            <label class="input">
                @Html.TextBoxFor(m => m.des_empresa, new { @class = "form-control" })
            </label>
        </section>
        <section class="col col-6">
            <label class="label">Documento (CPF/CNPJ)</label>
            <label class="input">
                @Html.TextBoxFor(m => m.des_documento, new { @class = "form-control" })
            </label>
        </section>
    </div>
    <div class="row">
        <section class="col col-6">
            <label class="label">Outras Info</label>
            <label class="textarea">
                @Html.TextAreaFor(m => m.des_info, new { @class = "custom-scroll", @rows = "2" })
            </label>
        </section>
    </div>


