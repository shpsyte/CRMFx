@model Ps_Leads
@Html.AntiForgeryToken()
@Html.HiddenFor(model => model.cod_lead)

<style>
    .smart-form .label {
        display: inline-block !important;
    }
    /*media screen*/
    .select2-selection__choice {
        padding: 1px 28px 1px 8px !important;
        margin: 4px 0 3px 5px !important;
        position: relative !important;
        line-height: 18px !important;
        color: #fff !important;
        cursor: default !important;
        border: 1px solid #2a6395;
        -webkit-background-clip: padding-box;
        background-clip: padding-box;
        -webkit-touch-callout: none;
        -webkit-user-select: none;
        -khtml-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
        background-color: #3276b1;
    }

</style>

<fieldset>
    <div class="row">
        <section class="col col-8">
            <label class="label">Nome</label>
            <label class="input">
                <i class="icon-prepend fa fa-user"></i>
                @Html.TextBoxFor(m => m.des_nome, new { @class = "form-control", @placeholder = "Nome" })
                @Html.ValidationMessageFor(model => model.des_nome)
            </label>
        </section>
        <section class="col col-4">
            <label class="label">Sobrenome</label>
            <label class="input">
                <i class="icon-prepend fa fa-user"></i>
                @Html.TextBoxFor(m => m.des_sobrenome, new { @class = "form-control", @placeholder = "Sobrenome" })
            </label>
        </section>
    </div>
    <div class="row">
        <section class="col col-8">
            <label class="label">Email</label>
            <label class="input">
                <i class="icon-prepend fa fa-envelope-o"></i>
                @Html.TextBoxFor(m => m.des_email, new { @type = "email", @class = "form-control", @placeholder = "Email" })
                @Html.ValidationMessageFor(model => model.des_email)
            </label>
        </section>
        <section class="col col-4">
            <label class="label">Celular</label>
            <label class="input">
                <i class="icon-prepend fa fa-phone"></i>
                @Html.TextBoxFor(m => m.des_fone, new { @type = "tel", @class = "form-control", @placeholder = "Fone" })
            </label>
        </section>
    </div>
    <div class="row">
        <section class="col col-6">
            <label class="label">Origem</label>
            <label class="select">
                @Html.DropDownList("cod_origem") <i></i>
                @Html.ValidationMessageFor(model => model.cod_origem)
            </label>
        </section>
        <section class="col col-6">
            <label class="label">Tipo</label>
            <label class="select">
                @Html.DropDownList("cod_tipo", String.Empty)  <i></i>
            </label>
        </section>
    </div>
    <div class="form-group">
        <label class="label">Interesse</label>
        @Html.DropDownList("des_interesse", null, new { @multiple = true, @style = "width:100%", @class = "select2" }) <i></i>
        @Html.ValidationMessageFor(model => model.des_interesse)
