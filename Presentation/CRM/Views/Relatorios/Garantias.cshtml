<!-- MAIN CONTENT -->
<div id="content">
    @{ Html.RenderPartialIf("_MiniDashboard", Settings.EnableMiniDashborad); }
    <!-- widget grid -->
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">
                <!-- new widget -->
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-3">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2> Relatório Garantias, para usar no BI use W_Garantia_Troca_Estagio </h2>

                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                            <input class="form-control" type="text">
                            <span class="note"><i class="fa fa-check text-success"></i> Altere o título deste grid de dados...</span>
                        </div>
                        <!-- widget content -->
                        <div class="widget-body no-padding smart-form">
                            @using (Html.BeginForm("GarantiasResult", "Relatorios"))
                            {
                                <fieldset>
                                    <div class="row">
                                        <section class="col col-4">
                                            <label class="label">Código</label>
                                            <label class="input">
                                                <i class="icon-prepend fa fa-check"></i>
                                                @Html.TextBox("cod_garantia", string.Empty, new { @class = "form-control", @placeholder = "Garantia" })
                                            </label>
                                        </section>
                                    </div>



                                    <div class="row">


                                        <section class="col col-4">
                                            <label class="label">Nome</label>
                                            <label class="input">
                                                <i class="icon-prepend fa fa-user"></i>
                                                @Html.TextBox("nome", string.Empty, new { @class = "form-control", @placeholder = "Nome" })
                                            </label>
                                        </section>

                                        <section class="col col-4">
                                            <label class="label">Representante</label>
                                            <label class="input">
                                                <i class="icon-prepend fa fa-user"></i>
                                                @Html.DropDownList("cod_representante", null, "Escolha", new { @class = "select2", @placeholder = "Nome" })
                                            </label>
                                        </section>


                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label class="label">Data Inicial</label>
                                            <label class="input">
                                                <i class="icon-prepend fa fa-calendar"></i>
                                                @Html.TextBox("dta_inicial", string.Empty, new { @class = "form-control date", @placeholder = "Data Inicial" })

                                            </label>
                                        </section>

                                        <section class="col col-4">
                                            <label class="label">Data Final</label>
                                            <label class="input">
                                                <i class="icon-prepend fa fa-calendar"></i>
                                                @Html.TextBox("dta_final", string.Empty, new { @class = "form-control date", @placeholder = "Data Final" })


                                            </label>
                                        </section>



                                    </div>




                                </fieldset>
                                <footer>
                                    <button type="submit" name="save" class="btn btn-success" value="save"> Gerar </button>
                                </footer>
                            }
                        </div>

                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->
            </article>
        </div>
        <!-- end row -->
    </section>
    <!-- end widget grid -->
</div>
@section pagespecific {
    <script src="/scripts/plugin/bootstrap-tags/bootstrap-tagsinput.min.js"></script>

    <script>
        // START AND FINISH DATE
        $('.date').datepicker({
            dateFormat: 'dd/mm/yy',
            prevText: '<i class="fa fa-chevron-left"></i>',
            nextText: '<i class="fa fa-chevron-right"></i>',
            onSelect: function (selectedDate) {
                $('#finishdate').datepicker('option', 'minDate', selectedDate);
            }
        });

    </script>
}
