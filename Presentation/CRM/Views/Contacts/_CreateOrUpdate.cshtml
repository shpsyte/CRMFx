@model Contatos
@Html.AntiForgeryToken()
@Html.HiddenFor(model => model.cod_contato)
<fieldset>
    <div class="row">
        <section class="col col-8">
            <label class="label">Nome</label>
            <label class="input">
                <i class="icon-prepend fa fa-user"></i>
                @Html.TextBoxFor(m => m.des_nome, new { @class = "form-control", @placeholder = "Nome" })
                @Html.ValidationMessageFor(model => model.des_nome)
            </label>
        </section>
        <section class="col col-4">
            <label class="label">Nascimento</label>
            <label class="input">
                <i class="icon-prepend fa fa-calendar"></i>
                @Html.TextBoxFor(m => m.dta_nascimento, new { @type = "date", @class = "form-control", @placeholder = "Aniversário" })
            </label>
        </section>
    </div>
    <div class="row">
        <section class="col col-8">
            <label class="label">Email</label>
            <label class="input">
                <i class="icon-prepend fa fa-envelope-o"></i>
                @Html.TextBoxFor(m => m.des_email, new { @class = "form-control", @placeholder = "Email" })
                @Html.ValidationMessageFor(model => model.des_email)
            </label>
        </section>
        <section class="col col-4">
            <label class="label">Estado Civil</label>
            <label class="select">
                @*@Html.DropDownList("cod_estado_civil", (IEnumerable<SelectListItem>)ViewBag.cod_estado_civil, String.Empty, new { @class = "select" })*@
                @Html.DropDownList("cod_estado_civil", String.Empty)                <i></i>
            </label>
        </section>
    </div>
    <div class="row">
        <section class="col col-6">
            <label class="label">Fone</label>
            <label class="input">
                <i class="icon-prepend fa fa-phone"></i>
                @Html.TextBoxFor(m => m.des_fone, new { @type = "tel", @class = "form-control", @placeholder = "Fone" })
            </label>
        </section>
        <section class="col col-6">
            <label class="label">Celular</label>
            <label class="input">
                <i class="icon-prepend fa fa-phone"></i>
                @Html.TextBoxFor(m => m.des_celular, new { @type = "tel", @class = "form-control", @placeholder = "Celular"  })
            </label>
        </section>
    </div>
    <div class="row">
        <section class="col col-6">
            <label class="label">Cargo</label>
            <label class="select">
                @*@Html.DropDownList("cod_cargo", (IEnumerable<SelectListItem>)ViewBag.cod_cargo, String.Empty, new { @class = "select", @id = "cod_cargo" })*@
                @Html.DropDownList("cod_cargo", String.Empty)
                <i></i>
            </label>
        </section>
        <section class="col col-6">
            <label class="label">Conta</label>
            <label class="select">
                @Html.DropDownList("cod_conta", null, String.Empty,   new { @class = "select" }) <i></i>
                @Html.ValidationMessageFor(model => model.cod_conta)
            </label>
        </section>
    </div>
    <div class="row">
        <section class="col col-6">
            <label class="label">Time</label>
            <label class="textarea textarea-expandable">
                @Html.TextAreaFor(m => m.des_time, new { @class = "custom-scroll", @rows = "2" })
            </label>
        </section>
        <section class="col col-6">
            <label class="label">Filhos</label>
            @Html.TextBoxFor(m => m.des_filhos, new { @class = "form-control tagsinput", @data_role = "tagsinput" })
        </section>
    </div>
    <div class="row">
        <section class="col col-6">
            <label class="label">Hobby</label>
            <label class="textarea">
                @Html.TextAreaFor(m => m.des_hobby, new { @class = "custom-scroll", @rows = "2" })
            </label>
        </section>
        <section class="col col-6">
            <label class="label">Outras</label>
            <label class="textarea">
                @Html.TextAreaFor(m => m.des_outras, new { @class = "custom-scroll", @rows = "2" })
            </label>
        </section>
    </div>
</fieldset>
