@model Estagio

@Html.AntiForgeryToken()
@Html.HiddenFor(model => model.estagioId)
@Html.HiddenFor(model => model.ind_inicio, new { id = "ind_inicio" })
@Html.HiddenFor(model => model.ind_liberado, new { id = "ind_liberado" })

@{ string indinicio = "N"; try { indinicio = Model.ind_inicio.ToString(); } catch { indinicio = "N"; }
    if (string.IsNullOrEmpty(indinicio)) { indinicio = "N"; } }

@{ string indliberado = "N"; try { indliberado = Model.ind_liberado.ToString(); } catch { indliberado = "N"; }
    if (string.IsNullOrEmpty(indliberado)) { indliberado = "N"; } }

<fieldset>
    <div class="row">
        <section class="col col-8">
            <label class="label">Descrição</label>
            <label class="input">
                <i class="icon-prepend fa fa-user"></i>
                @Html.TextBoxFor(m => m.descricao, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.descricao)
            </label>
        </section>


    </div>
    <label>Características</label>
    <hr />

   

    <div class="row">
        <section class="col col-6">
            <label class="label">Estágio Anterior</label>
            <label class="select">
                @Html.DropDownList("estagioid_anterior", String.Empty) <i></i>
            </label>
        </section>

        <section class="col col-6">
            <label class="label">Próximo Estágio</label>
            <label class="select">
                @Html.DropDownList("estagioid_proximo", String.Empty) <i></i>
            </label>
        </section>

    </div>


    <div class="row">
        <section class="col col-6">
            <label class="label">Novo Status</label>
            <label class="select">
                @Html.DropDownList("statusid", String.Empty) <i></i>
            </label>
        </section>


    </div>

      
    <div class="row">
        <section class="col col-6">
            <label class="checkbox">
                <input type="checkbox" name="checkbox-inline" id="_indinicio" @(indinicio == "S" ? "checked='checked'" : "")>
                <i></i> Estágio Inicial
            </label>
        </section>

        <section class="col col-6">
            <label class="checkbox">
                <input type="checkbox" name="checkbox-inline" id="_indliberado" @(indliberado == "S" ? "checked='checked'" : "")>
                <i></i> Estágio Cancelado
            </label>
        </section>



    </div>




</fieldset>
